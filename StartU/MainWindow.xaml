<Window x:Class="StartU.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StartU"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        FontFamily="Fira Code"
        Height="500"
        Width="360">

    <!--<Window.DataContext>
        <locals:ItemViewModel/>
    </Window.DataContext>-->

    <Grid>
        
        <Grid x:Name="ControlPanel" 
              Width="330"
              Height="Auto"
              Margin="10"
              VerticalAlignment="Top">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="80" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Button x:Name="btnSave"
                    Margin="10"
                    Content="Save" />

            <Button x:Name="btnRun"
                    Margin="10"
                    Grid.Row="1"
                    Content="Run" />

            <Button x:Name="btnLoad"
                    Margin="10"
                    Grid.Column="1"
                    Content="Load" />

            <Button x:Name="btnRemove"
                    Margin="10"
                    Grid.Row="1"
                    Grid.Column="1"
                    Content="Remove" />
            
            <Button x:Name="btnAddItem"
                    Margin="10"
                    Grid.Column="3"
                    Content="Add Item" />

            <Button x:Name="btnAddList"
                    Margin="10"
                    Grid.Row="1"
                    Grid.Column="3"
                    Content="Add List" />

            <Button x:Name="btnTest"
                    Command="{Binding Path=RunProcessCommand}"
                    Margin="10"
                    Grid.Column="2"
                    Content="Test"
                    BorderBrush="#FFF1DFDF"
                    Background="White" />

            <Button x:Name="btnTestSecond"
                    Command="{Binding Path=OpenAddItemWindowCommand}"
                    CommandParameter="{Binding Content, ElementName=btnAddItem}"
                    Margin="10"
                    Grid.Row="1"
                    Grid.Column="2"
                    Content="Test 2"
                    Background="White"
                    BorderBrush="White" />

            <StackPanel x:Name="CheckBoxStackPanel"
                        Height="Auto"
                        Width="100"
                        Margin="5"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left"
                        Grid.Row="2"
                        Grid.ColumnSpan="2">

                <!--<Button x:Name="a"
                        Margin="10"
                        Content="Test 2" />-->

            </StackPanel>

            <StackPanel x:Name="ButtonStackPanel"
                        Height="Auto"
                        Width="150"
                        Margin="5"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Right"
                        Grid.Row="2"
                        Grid.Column="2"
                        Grid.ColumnSpan="4" />

        </Grid>
        
        <Grid x:Name="ItemPanels"
              Width="330"
              Height="200"
              Margin="10"
              VerticalAlignment="Bottom">
            
        </Grid>
    </Grid>
</Window>
